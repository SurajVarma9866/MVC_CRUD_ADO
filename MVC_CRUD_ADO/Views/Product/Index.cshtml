@model List<Product>

@{
    ViewData["Title"] = "All Products";
}

<h2 class="text-center mt-4 mb-3">ðŸ“¦ Product List</h2>

<table class="table table-striped table-bordered text-center align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>Price (â‚¹)</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("F2")</td>
                    <td>@item.Category</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-muted">No products available.</td>
            </tr>
        }
    </tbody>
</table>

